{
  "compilerOptions": {
    "target": "ES2020", /* Set the target JavaScript version (ES2020 in this case) for emitted JavaScript */
    "module": "commonjs", /* Specify module code generation (CommonJS for Node.js) */
    "moduleResolution": "node", /* Use Node.js module resolution strategy for imports */
    "esModuleInterop": true, /* Enable compatibility for importing CommonJS modules with ES6 imports */
    "outDir": "./dist", /* Specify the output directory for compiled JavaScript files */
    "baseUrl": "./", /* Set the base directory for non-relative module imports */
    "rootDir": "./src", /* Specify the root directory for source files (TypeScript files in src) */
    "skipLibCheck": true, /* Skip type checking for declaration files (*.d.ts) in node_modules */
    "forceConsistentCasingInFileNames": true, /* Ensure consistent casing of file names */
    "strict": true, /* Enable all strict type-checking options */
    "noImplicitAny": true, /* Disallow usage of 'any' type implicitly */
    "strictNullChecks": true, /* Enable strict null checks (null and undefined are distinct types) */
    "noUnusedLocals": true, /* Raise errors for unused local variables */
    "noUnusedParameters": true, /* Raise errors for unused function parameters */
    "noImplicitReturns": true, /* Require functions to explicitly return a value or throw an exception */
    "noFallthroughCasesInSwitch": true, /* Disallow fallthrough behavior in switch statements (no missing 'break') */
    "resolveJsonModule": true, /* Allow importing JSON files as modules */
    "skipDefaultLibCheck": true, /* Skip type checking of default library declaration files */
    "types": [
      "node",
      "express"
    ], /* Include type definitions for Node.js and Express */
    "isolatedModules": true, /* Ensure each file is treated as an isolated module for safe transpiling */
    "declaration": true, /* Generate declaration files (.d.ts) for the project */
    "declarationMap": true, /* Create sourcemaps for declaration files */
    "sourceMap": true /* Generate source maps for debugging */
  },
  "include": [
    "src/**/*.ts" /* Include all TypeScript files in the 'src' directory */
  ],
  "exclude": [
    "node_modules", /* Exclude the node_modules folder */
    "dist" /* Exclude the output directory 'dist' */
  ]
}